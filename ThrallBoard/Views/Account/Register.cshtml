@model RegisterViewModel

@{
  ViewBag.Title = "Register a new user";
}

  <main>
    <form asp-controller="account" asp-action="register" method="post" class="mt-3" enctype="multipart/form-data">

      <div asp-validation-summary="All" class="text-danger"></div>

      <div class="form-group">
        <label asp-for="Email"></label>
        <div>
          <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter the email">
          <small id="emailHelp" class="form-text text-muted">We will never tell your email to no-one else, literally meaning</small>
          <span asp-validation-for="Email" class="text-danger"></span>
        </div>
      </div>

      <div class="form-group">
        <label asp-for="Password"></label>
        <div>
          <input type="text" class="form-control" asp-for="Password" aria-describedby="passwordHelp" placeholder="Enter your password">
          <small id="passwordHelp" class="form-text text-muted">Just tell us your password. It never hurts.</small>
          <span asp-validation-for="Password" class="text-danger"></span>
        </div>
      </div>

      <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <div>
          <input type="text" class="form-control" asp-for="ConfirmPassword" aria-describedby="passwordAgainHelp" placeholder="Spell your password again carefully">
          <small id="passwordAgainHelp" class="form-text text-muted">Say your password again carefully, we do not want any mistake</small>
          <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
      </div>

      <button type="submit" class="btn btn-primary">Register</button>

    </form>
  </main>
